{
  "name": "e750-Micro",
  "version": "0.0.0",
  "description": "750Commerce Micro-framework",
  "main": "lib/cli/main.js",
  "dependencies": {
    "babel": "^5.5.5",
    "body-parser": "^1.12.4",
    "cookie-parser": "^1.3.5",
    "core-js": "^1.0.1",
    "express": "^4.12.4",
    "pem": "^1.7.2",
    "request-promise": "^0.4.2",
    "rsvp": "^3.0.18",
    "templeton": "^2.1.1",
    "xhttp": "^0.0.6"
  },
  "devDependencies": {
    "babel-eslint": "^3.1.26",
    "babel-istanbul": "^0.2.10",
    "babel-plugin-jscript": "^1.0.4",
    "babelify": "^6.1.0",
    "browserify": "^11.2.0",
    "browserify-istanbul": "^0.2.1",
    "chai": "^3.2.0",
    "chai-as-promised": "^5.1.0",
    "eslint": "^0.21.0",
    "isparta": "^3.0.3",
    "karma": "^0.13.3",
    "karma-browserify": "^4.4.0",
    "karma-chai": "^0.1.0",
    "karma-chai-as-promised": "^0.1.2",
    "karma-chrome-launcher": "^0.2.0",
    "karma-coverage": "douglasduteil/karma-coverage#next",
    "karma-firefox-launcher": "^0.1.6",
    "karma-junit-reporter": "^0.3.3",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.0.4",
    "karma-notify-reporter": "^0.1.1",
    "karma-phantomjs-launcher": "^0.2.0",
    "karma-safari-launcher": "^0.1.1",
    "karma-sinon-chai": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.5",
    "minifyify": "^7.0.3",
    "mocha": "^2.2.5",
    "phantomjs": "^1.9.17",
    "plato": "^1.5.0",
    "sinon": "^1.15.4"
  },
  "scripts": {
    "lint": "eslint -c ./.eslintrc ./src/**/*.js ./test/**/**/*.js",
    "test": "karma start --single-run",
    "precompile": "npm run lint",
    "compile": "browserify ./src/client/main.js -t [babelify --sourceMapRelative ./src] --outfile dist/e750.js",
    "prebuild": "npm run lint && npm test",
    "build": "browserify -d ./src/client/main.js -t [babelify --sourceMapRelative ./src] -p [minifyify --map /js/e750.js.map --output dist/e750.js.map] --outfile dist/e750.min.js",
    "postbuild": "npm run metrics",
    "start": "babel-node ./src/server/main.js",
    "premetrics": "babel --optional runtime src/ --out-dir ./build/metrics/src",
    "metrics": "plato -r  -l ./.eslintrc -t 'e750 MicroFramework' -d ./reports/metrics ./build/metrics/src"
  },
  "author": "Alessandro Di Candia",
  "license": "BSD"
}
